@{
    ViewData["Title"] = "Courses";
    Layout = "~/Views/Shared/_Layout.cshtml";

    List<object> commands = new List<object>();
    commands.Add(new { type = "userstatus", buttonOption = new { content = "Details", cssClass = "e-success e-details" } }); // custom
}

<div class="row">
    <div class="col-md-12">
        <div class="card ">
            <div class="card-header card-header-success card-header-text" style="margin-bottom:20px">
                <div class="card-text"><h4 class="card-title">@ViewBag.Title</h4></div>
            </div>
            <div class="control-section">
                <ejs-grid id="CourseGrid" toolbarClick="toolbarClick" toolbar="@(new List<string>() { "Add", "Edit", "Delete", "Search", "ExcelExport" })" commandClick="commandClick" allowExcelExport="true" allowFiltering="true" allowPaging="true">
                    <e-data-manager url="/Courses/UrlDatasource" insertUrl="/Courses/Insert" updateUrl="/Courses/Update" removeUrl="/Courses/Remove" adaptor="UrlAdaptor"></e-data-manager>
                    <e-grid-searchSettings fields="@(new string[] { "CourseId", "CourseName"})" operator="contains" ignoreCase="true"></e-grid-searchSettings>
                    <e-grid-editSettings allowAdding="true" allowDeleting="true" allowEditing="true" mode="Dialog" showConfirmDialog="true"></e-grid-editSettings>
                    <e-grid-pagesettings pageCount="4" pageSizes="true"></e-grid-pagesettings>
                    <e-grid-filterSettings type="Excel"></e-grid-filterSettings>
                    <e-grid-columns>
                        <e-grid-column field="Id" isPrimaryKey="true" visible="false"></e-grid-column>
                        <e-grid-column field="CourseId" headerText="Course ID" validationRules="@(new { required=true})" textAlign="Left" width="150"></e-grid-column>
                        <e-grid-column field="CourseName" headerText="Course Name" validationRules="@(new { required=true})" width="150" textAlign="Left"></e-grid-column>
                        <e-grid-column width="150" commands="commands"></e-grid-column>
                    </e-grid-columns>
                </ejs-grid>
            </div>
        </div>
    </div>
</div>

<script>
    function commandClick(args) {
        var parseObject = JSON.parse(JSON.stringify(args.rowData));
 
        var id = parseObject.id;
        var courseId = parseObject.courseId;
        var courseName = parseObject.courseName;

        Swal.fire({
            title: "Course Detail",
            html: '<table class="table"> <tr> <td style="font-weight:bold">ID</td> <td>:</td> <td>' + id + '</td> </tr> <tr> <td style="font-weight:bold">Course ID</td> <td>:</td> <td>' + courseId + '</td> </tr> <tr> <td style="font-weight:bold">Course Name</td> <td>:</td> <td>' + courseName + '</td> </tr></table>',
            icon: 'info',
            showConfirmButton: true,
            allowEscapeKey: false,
            allowOutsideClick: false,
            confirmButtonText: "CLOSE",
            width: 550
        });
    }

    function toolbarClick(args) {
        var gridObj = document.getElementById("CourseGrid").ej2_instances[0];

        if (args.item.id === 'CourseGrid_excelexport') {
            gridObj.excelExport();
        }
    }
</script>