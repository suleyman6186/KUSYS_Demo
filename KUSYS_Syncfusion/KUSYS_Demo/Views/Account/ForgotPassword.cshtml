@model UserForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="passwordBox animated fadeInDown">
    <div class="row">
        <div class="col-md-12">
            <div class="ibox-content">
                <h2 class="font-bold">Forgot Password</h2>
                <p>Enter your email address below. <br />Your password will be reset and emailed to you.</p>
                <div class="row">
                    <div class="col-lg-12">
                        <form class="m-t" role="form" asp-action="ForgotPassword">
                            <div class="form-group">
                                <input type="email" class="form-control" asp-for="@Model.Mail" placeholder="Email">
                                <span asp-validation-for="@Model.Mail" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-primary block full-width m-b">Reset Password</button>
                        </form>
                    </div>
                    <div class="col-lg-12">
                        <a class="btn btn-sm btn-secondary btn-block" href="/Login/Index/">Login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr style="border-color:white!important" />
    <div class="row white">
        <div class="col-md-4">
            © @DateTime.Today.Year
        </div>
        <div class="col-md-8 text-right">
            <small>Koç University KUSYS_Demo - All Rights Reserved</small>
        </div>
    </div>
</div>